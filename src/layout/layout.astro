---
import '../styles/index.scss';

const { title = 'Directus meets Astro' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="content">
      <slot />
    </div>
    <style lang="scss">
      .content {
        max-width: 80rem;
        margin: 0 auto;
        padding: 1rem;
      }
    </style>
  </body>
</html>
